$(document).ready(function(){
	
	$.event.special.swipe.horizontalDistanceThreshold = 5;
	
	$("#swiper").swiperight(function() {  
	    		  $("#adwrapx").text("RIGHT");  
		    		}); 
					 
	$("#swiper").swipeleft(function() {  
					    		  $("#adwrapx").text("LEFT");  
						    		}); 
									 
										
	$("#swiper").tap(function() {  
					    		  $("#adwrapx").text("TAP");  
						    		});											
	
})

</script>

